{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./scripts/dist",
    "types": ["node", "@nomicfoundation/hardhat-ethers"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "scripts/dist"]
}
